{%- style -%}
  .glider__container {
    display: flex;
    flex-direction: column;
    position: relative;
    padding: 0px 10px 60px 10px;
  }

  .glider__container .prev,
  .glider__container .next {
    position: absolute;
    bottom: 0;
    transform: translate(-50%);
    width: 50px;
    height: 50px;

    background: transparent;
    border: none;
  }

  .glider__container .next {
    right: 45%;
  }

  .glider__container .prev {
    transform: translate(-50%) rotate(180deg);
    left: 45%;
  }

  .glider {
    display: flex;
    gap: 50px;
    align-items: stretch;
    height: 100%;
    min-height: 400px;
    margin: 25px 0 0 0 !important;
  }

  .carousel-slide {
    display: grid;
    grid-template-columns: 2fr 3fr; /* 2/5 image, 3/5 text */
    gap: 25px;

    height: 100%;
    min-height: 400px;

    border-radius: 25px;
    overflow: hidden;
    margin: auto;
    max-width: 850px;
    padding: 0 !important;
    margin-right: 15px !important;
  }

  .img-block,
  .text-block {
    width: 100%;
    height: 100%;
  }

  .img-block {
    aspect-ratio: 7 / 9;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .text-block {
    padding: 25px 10px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .text-left {
    text-align: left;
  }

  .text-center {
    text-align: center;
  }

  .text-right {
    text-align: right;
  }

  /* Mobile layout */
  @media screen and (max-width: 749px) {
    .carousel-slide {
      grid-template-columns: 1fr;
      grid-template-rows: 1fr 2fr;
      max-width: 100%;
      height: 80vh !important;
    }
    .img-block {
      aspect-ratio: 1;
    }

    .glider__container .prev,
    .glider__container .next {
      display: none;
    }
  }
{%- endstyle -%}
