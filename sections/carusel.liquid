{% comment %} Glider CSS {% endcomment %}
{{ 'glider.min.css' | asset_url | stylesheet_tag }}

<div
  class="page-width glider__container color-scheme"
  id="{{ section.id }}"
  data-color-scheme="{{ section.settings.section_color_scheme }}"
>
  <h2 class="text-{{ section.settings.align_text }}">
    {{ section.settings.title }}
  </h2>

  <div class="glider">
    {% for block in section.blocks %}
      <div
        class="carousel-slide color-scheme"
        {{ block.shopify_attributes }}
        data-color-scheme="{{ block.settings.block_color_scheme }}"
      >
        <div class="img-block" style="background-image: url({{ block.settings.image | image_url: width: 600 }});"></div>

        <div class="text-block text-{{ block.settings.align_text }}">
          {% if block.settings.heading %}
            <h3>{{ block.settings.heading }}</h3>
          {% endif %}
          {% if block.settings.text %}
            <p>{{ block.settings.text }}</p>
          {% endif %}
          {% if block.settings.link %}
            <a class="button" href="{{ block.settings.link }}">
              {{ block.settings.linktext }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

  <button class="prev" aria-label="Previous slide">
    <img src="{{ 'slider_arrow.svg' | asset_url }}" alt="Arrow" height="50" width="50">
  </button>
  <button class="next" aria-label="Next slide">
    <img src="{{ 'slider_arrow.svg' | asset_url }}" alt="Arrow" height="50" width="50">
  </button>
</div>

<script src="{{ 'glider.min.js' | asset_url }}" async></script>
<script>
  window.addEventListener('DOMContentLoaded', () => {
    new Glider(document.querySelector('.glider'), {
      slidesToShow: 1,
      slidesToScroll: 1,
      draggable: true,
      arrows: {
        prev: '#{{ section.id }} .prev',
        next: '#{{ section.id }} .next',
      },
      responsive: [
        {
          breakpoint: 750,
          settings: {
            slidesToShow: 1.5,
          },
        },
      ],
    });
  });
</script>

{% schema %}
{
  "name": "Carousel",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "This is a title"
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "Text alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Centered" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "Section color scheme",
      "default": "background-1"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "This is a slider heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Hereâ€™s a short description or message."
        },
        {
          "type": "select",
          "id": "align_text",
          "label": "Text alignment",
          "default": "left",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Centered" },
            { "value": "right", "label": "Right" }
          ]
        },
        {
          "type": "color_scheme",
          "id": "block_color_scheme",
          "label": "Block color scheme",
          "default": "background-2"
        },
        {
          "id": "link",
          "type": "url",
          "label": "Link URL"
        },
        {
          "id": "linktext",
          "type": "text",
          "label": "Link text",
          "default": "Click here"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Carousel"
    }
  ]
}
{% endschema %}

{%- style -%}
  .glider__container {
    display: flex;
    flex-direction: column;
    position: relative;
    padding: 0px 10px 60px 10px;
  }

  .glider__container .prev,
  .glider__container .next {
    position: absolute;
    bottom: 0;
    transform: translate(-50%);
    width: 50px;
    height: 50px;
    background: transparent;
    border: none;
  }

  .glider__container .next {
    right: 45%;
  }

  .glider__container .prev {
    transform: translate(-50%) rotate(180deg);
    left: 45%;
  }

  .glider {
    display: flex;
    gap: 50px;
    align-items: stretch;
    height: 100%;
    min-height: 400px;
    margin: 25px 0 0 0 !important;
  }

  .carousel-slide {
    display: grid;
    grid-template-columns: 2fr 3fr;
    gap: 25px;
    height: 100%;
    min-height: 400px;
    border-radius: 25px;
    overflow: hidden;
    margin: auto;
    max-width: 850px;
    padding: 0 !important;
    margin-right: 15px !important;
    background-color: var(--color-background);
    color: var(--color-foreground);
  }

  .img-block,
  .text-block {
    width: 100%;
    height: 100%;
  }

  .img-block {
    aspect-ratio: 7 / 9;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .text-block {
    padding: 25px 10px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .text-left {
    text-align: left;
  }

  .text-center {
    text-align: center;
  }

  .text-right {
    text-align: right;
  }

  .text-block a.button {
    background-color: var(--color-button);
    color: var(--color-button-text);
    padding: 0.5em 1.2em;
    border-radius: 5px;
    text-decoration: none;
    display: inline-block;
    margin-top: 15px;
  }

  @media screen and (max-width: 749px) {
    .carousel-slide {
      grid-template-columns: 1fr;
      grid-template-rows: 1fr 2fr;
      max-width: 100%;
      height: 80vh !important;
    }
    .img-block {
      aspect-ratio: 1;
    }
    .glider__container .prev,
    .glider__container .next {
      display: none;
    }
  }
{%- endstyle -%}
