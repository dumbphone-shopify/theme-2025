{% schema %}
{
  "name": "Media Logos Slider",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "This is a title"
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "Text alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Centered" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Media Logos Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="media-logos-slider section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <h2 class="text-{{ section.settings.align_text }}" style="color:{{ section.settings.title_color }}">
    {{ section.settings.title }}
  </h2>
  <div class="slider-container">
    {% for block in section.blocks %}
      <div class="slider-item">
        <img src="{{ block.settings.logo_image | img_url: 'medium' }}" alt="Media Logo">
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .media-logos-slider {
    width: 100%;
    overflow: hidden;
    position: relative;
  }
  .slider-container {
    display: flex;
    width: 100%;
    animation: slide 25s linear infinite;
  }
  .slider-item {
    flex: 0 0 auto;
    margin: 0 10px;
  }
  @keyframes slide {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style>
