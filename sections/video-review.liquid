{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}
{% schema %}
  {
    "name": "Product video review",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Video review"
      },
      {
        "type": "checkbox",
        "id": "show_description",
        "label": "Show product description",
        "default": true
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color scheme",
        "default": "scheme-1"
      },
      {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.rich-text.settings.full_width.label"
    },
      {
        "type": "select",
        "id": "desktop_content_position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center",
        "label": "Desktop content position"
      },
      {
        "type": "select",
        "id": "content_alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center",
        "label": "Content alignment"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 40
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 52
      }
    ]
  }
{% endschema %}

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .responsive-video {
    aspect-ratio: 16 / 9;
    width: 100%;
    height: auto;
    display: block;
    margin-bottom: 1.5rem;
  }
  .product-video-review {
  ;
  /* background-color: lightblue;  not needed if using color schme*/
}

h2 {
  text-align: center;
  font-size: clamp(1.5rem, 1.2391rem + 1.3043vw, 2.25rem);
}

.wrapper {}

</style>


<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {% if section.settings.heading != blank %}
            <h2>{{ section.settings.heading }}</h2>
          {% endif %}
        
        {% assign video_url = product.metafields.custom.video_feature.value %}
        {% assign embed_url = '' %}
        {% if video_url %}
          {% if video_url contains 'youtube.com/watch?v=' %}
            {% assign video_id = video_url | split: 'v=' | last | split: '&' | first %}
            {% assign embed_url = 'https://www.youtube.com/embed/' | append: video_id %}
          {% elsif video_url contains 'youtu.be/' %}
            {% assign video_id = video_url | split: 'youtu.be/' | last | split: '?' | first %}
            {% assign embed_url = 'https://www.youtube.com/embed/' | append: video_id %}
          {% elsif video_url contains 'vimeo.com/' %}
            {% assign video_id = video_url | split: 'vimeo.com/' | last | split: '?' | first %}
            {% assign embed_url = 'https://player.vimeo.com/video/' | append: video_id %}
          {% else %}
            {% assign embed_url = video_url %}
          {% endif %}

          <div class="responsive-video">
            <iframe
              src="{{ embed_url }}"
              frameborder="0"
              allowfullscreen
              style="width:100%;height:100%"></iframe>
          </div>
        {% endif %}

        {% assign description = product.metafields.custom.secondary_description.value %}
        {% if description %}
          <div class="product-description">
            {{ description | metafield_tag }}
          </div>
        {% endif %}
      
      </div>
    </div>
  </div>
</div>