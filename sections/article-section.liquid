{% schema %}
  {
    "name": "Artikelsektion",
    "tag": "article",
    "class": "custom-article",
    "limit": 1,
    "presets": [
      {
        "name": "Default custom sections"
      }
    ],
    "settings": [
      {
        "type": "select",
        "id": "hero_type",
        "label": "Hero-billede",
        "options": [
          {
            "value": "image",
            "label": "Billede"
          }, {
            "value": "video",
            "label": "Video"
          }
        ],
        "default": "image"
      },
      {
        "type": "image_picker",
        "id": "hero_image",
        "label": "VÃ¦lg billede"
      },
      {
        "type": "url",
        "id": "hero_video_url",
        "label": "Video-URL"
      },
      {
        "type": "text",
        "id": "hero_title",
        "label": "Rubrik"
      }, {
        "type": "select",
        "id": "image_title_position",
        "label": "Image title position",
        "options": [
          {
            "value": "overlay",
            "label": "Overlay on image"
          }, {
            "value": "below",
            "label": "Below image"
          }
        ],
        "default": "overlay"
      }
    ],
    "blocks": [
      {
        "type": "heading",
        "name": "Ny titel",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Ny titel"
          }
        ]
      }, {
        "type": "paragraph",
        "name": "Paragraf",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Paragraf"
          }
        ]
      }, {
        "type": "image",
        "name": "Billede",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Billede till artikel"
          }, {
            "type": "text",
            "id": "alt",
            "label": "Alternativ billedetekst"
          }
        ]
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  .hero-title-overlay {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    color: white;
    background-color: rgba(0, 0, 0, 0.5);
    padding: 0.5rem;
  }
{% endstylesheet %}

<div class="wrapper">
  {% if section.settings.hero_type == 'image' and section.settings.hero_image %}
    <div>
      <img src="{{ section.settings.hero_image | img_url: width: 2000}}" alt="Hero image" />

      {% if section.settings.image_title_position == 'overlay' %}
        <h1 class="hero-title-overlay">{{ section.settings.hero_title }}</h1>
      {% endif %}
    </div>
    {% if section.settings.image_title_position == 'below' %}
      <h1>{{  }}section.settings.hero_title</h1>
    {% endif %}

  {% elsif section.settings.hero_type == 'video' and section.settings.hero_video_url %}
    <div class="wrapper">
      <video controls="controls">
        <source src="{{ section.settings.hero_video_url }}" type="video/mp4">

      </video>
    </div>
    <h1>{{ section.settings.hero_title }}</h1>
  {% endif %}

  <section class="article-body">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'heading' %}
          <h2>{{ block.settings.heading }}</h2>
        {% when 'paragraph' %}
          <p>{{ block.settings.text }}</p>
        {% when 'image' %}
          <img src="{{block.settings.image | image_url: width: 1200}}" />
      {% endcase %}
    {% endfor %}
  </section>
</div>